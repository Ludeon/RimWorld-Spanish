<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>


  <ThingDef Name="PlantBase" Abstract="True">
    <eType>Plant</eType>
    <category>Plant</category>
    <thingClass>Plant</thingClass>
    <altitudeLayer>LowPlant</altitudeLayer>
    <useStandardHealth>True</useStandardHealth>
    <statBases>
      <Flammability>1.0</Flammability>
    </statBases>
    <tickerType>Rare</tickerType>
    <selectable>False</selectable>
    <neverMultiSelect>True</neverMultiSelect>
    <drawerType>MapMeshOnly</drawerType>
    <shaderType>CutoutPlant</shaderType>
    <plant>
      <harvestDestroys>true</harvestDestroys>
      <harvestingSound>Harvest_Standard</harvestingSound>
      <harvestFinishSound>Harvest_Standard_Finish</harvestFinishSound>
      <sowWork>150</sowWork>
      <fertilityMin>0.5</fertilityMin>
      <fertilityFactorGrowthRate>1.0</fertilityFactorGrowthRate>
      <topWindExposure>0.1</topWindExposure>
      <growthPer20kTicks>0.48</growthPer20kTicks>
      <lifeSpan>200000</lifeSpan>
      <growMinGlow>Overlit</growMinGlow>
      <seedShootMinGrowthPercent>0.6</seedShootMinGrowthPercent>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.00</max>
      </visualSizeRange>
    </plant>
  </ThingDef>






  <!--===========================  Wild - clustering bushes (some harvestable) ==============================-->


  <ThingDef ParentName="PlantBase">
    <defName>PlantAgave</defName>
    <label>agave</label>
    <statBases>
      <MaxHealth>120</MaxHealth>
    </statBases>
    <description>Large-leafed desert plant with edible flowers and stalks.</description>
    <graphicPathFolderRandom>Things/Plant/Agave</graphicPathFolderRandom>
    <selectable>true</selectable>
    <sunShadowInfo>
      <baseWidth>0.2</baseWidth>
      <baseHeight>0.2</baseHeight>
      <tallness>0.6</tallness>
    </sunShadowInfo>
    <fillPercent>0.25</fillPercent>
    <pathCost>30</pathCost>
    <food>
      <quality>Plant</quality>
      <nutrition>40</nutrition>
    </food>
    <plant>
      <harvestTag>Standard</harvestTag>
      <harvestDestroys>false</harvestDestroys>
      <harvestedThingDef>RawAgave</harvestedThingDef>
      <harvestYieldRange>
        <min>1</min>
        <max>4</max>
      </harvestYieldRange>
      <fertilityMin>0.3</fertilityMin>
      <wildCommonalityMaxFraction>3.0</wildCommonalityMaxFraction>
      <visualSizeRange>
        <min>0.7</min>
        <max>1.1</max>
      </visualSizeRange>
      <growthPer20kTicks>0.45</growthPer20kTicks>
      <topWindExposure>0.3</topWindExposure>
      <seedShootRadius>10</seedShootRadius>
      <lifeSpan>800000</lifeSpan>
      <fertilityFactorGrowthRate>0.5</fertilityFactorGrowthRate>
      <wildClusterSizeRange>
        <min>2</min>
        <max>5</max>
      </wildClusterSizeRange>
      <wildClusterRadius>4</wildClusterRadius>
    </plant>
  </ThingDef>








  <!--============================ Wild - Cacti ============================-->


  <ThingDef ParentName="PlantBase">
    <defName>PlantSaguaroCactus</defName>
    <label>saguaro cactus</label>
    <statBases>
      <MaxHealth>200</MaxHealth>
    </statBases>
    <description>Large cactus native to arid Earth environments.</description>
    <graphicPathFolderRandom>Things/Plant/SaguaroCactus</graphicPathFolderRandom>
    <altitudeLayer>BuildingTall</altitudeLayer>
    <selectable>true</selectable>
    <fillPercent>0.35</fillPercent>
    <sunShadowInfo>
      <baseWidth>0.3</baseWidth>
      <baseHeight>0.3</baseHeight>
      <tallness>0.3</tallness>
    </sunShadowInfo>
    <passability>Impassable</passability>
    <plant>
      <harvestingSound>Harvest_Tree</harvestingSound>
      <harvestFinishSound>Harvest_Tree_Finish</harvestFinishSound>
      <harvestWork>300</harvestWork>
      <harvestDestroys>true</harvestDestroys>
      <harvestedThingDef>WoodLog</harvestedThingDef>
      <harvestTag>Wood</harvestTag>
      <harvestYieldRange>
        <min>5</min>
        <max>10</max>
      </harvestYieldRange>
      <harvestMinGrowth>0.2</harvestMinGrowth>
      <visualSizeRange>
        <min>1.3</min>
        <max>2.0</max>
      </visualSizeRange>
      <fertilityMin>0.05</fertilityMin>
      <growthPer20kTicks>0.14</growthPer20kTicks>
      <topWindExposure>0.08</topWindExposure>
      <seedShootRadius>17</seedShootRadius>
      <lifeSpan>800000</lifeSpan>
      <fertilityFactorGrowthRate>0</fertilityFactorGrowthRate>
    </plant>
  </ThingDef>


  <ThingDef ParentName="PlantBase">
    <defName>PlantPincushionCactus</defName>
    <label>pincushion cactus</label>
    <statBases>
      <MaxHealth>150</MaxHealth>
      <Beauty>-4</Beauty>
    </statBases>
    <description>Short cactus, so named because it resembles a pincushion.</description>
    <graphicPathFolderRandom>Things/Plant/PincushionCactus</graphicPathFolderRandom>
    <selectable>true</selectable>
    <pathCost>30</pathCost>
    <plant>
      <fertilityMin>0.05</fertilityMin>
      <wildCommonalityMaxFraction>3.0</wildCommonalityMaxFraction>
      <visualSizeRange>
        <min>0.40</min>
        <max>0.65</max>
      </visualSizeRange>
      <growthPer20kTicks>0.30</growthPer20kTicks>
      <topWindExposure>0.0</topWindExposure>
      <seedShootRadius>12</seedShootRadius>
      <lifeSpan>1000000</lifeSpan>
      <fertilityFactorGrowthRate>0</fertilityFactorGrowthRate>
      <wildClusterSizeRange>
        <min>2</min>
        <max>5</max>
      </wildClusterSizeRange>
      <wildClusterRadius>4</wildClusterRadius>
      <maxMeshCount>4</maxMeshCount>
    </plant>
  </ThingDef>




</ThingDefs>